                                </hbox>
                            </vbox>
                        </hbox>
                    </vbox>
                    </hbox>
                </radiogroup>
                </tabpanel>
                <tabpanel id="colors_panel" orient="vertical">
                    <description style="margin-bottom: 10px;">
                        Choose colors for Komodo's editor elements (i.e.
                        anything in the editor that is not syntax coloring).
                    </description>
                    <label value="Color Choice: " accesskey="&h.accesskey;" control="extracolors"/>
                    <hbox align="center">
                        <menulist id="extracolors">
                            <menupopup>
                                <menuitem id="caretLineBack"
                                          label="&currentLineBackgroundColor.label;"
                                          value="0"
                                          oncommand="updateSchemeColor('caretLineBack')"/>
                                <menuitem id="caretFore"
                                          label="&cursorColor.label;"
                                          value="1"
                                          oncommand="updateSchemeColor('caretFore')"/>
                                <menuitem id="selBack"
                                          label="&selectionBackgroundColor.label;"
                                          value="2"
                                          oncommand="updateSchemeColor('selBack')"/>
                                <menuitem id="selFore"
                                          label="&selectionTextColor.label;"
                                          value="3"
                                          oncommand="updateSchemeColor('selFore')"/>
                                <menuitem id="bookmarkColor"
                                          label="&bookmarkColor.label;"
                                          value="6"
                                          oncommand="updateSchemeColor('bookmarkColor')"/>
                                <menuitem id="currentLineColor"
                                          label="&debuggerCurrentLineBackgroundColor.label;"
                                          value="7"
                                          oncommand="updateSchemeColor('currentLineColor')"/>
                                <menuitem id="callingLineColor"
                                          label="&debuggerCallingLineBackgroundColor.label;"
                                          value="8"
                                          oncommand="updateSchemeColor('callingLineColor')"/>
                                <menuitem id="edgeColor"
                                          label="&edgeLineBackgroundColorOfTextTooFar.label;"
                                          value="9"
                                          oncommand="updateSchemeColor('edgeColor')"/>
                            </menupopup>
                        </menulist>
                        <colorpicker width="20" height="20"
                            id="schemeColorPicker" palettename="standard" type="button"
                            pref="true" prefattribute="color" prefstring="cursorColor"
                            persist="palettename" onchange="setColour(this)"/>
<!-- #if PLATFORM == "win" or PLATFORM == "darwin" -->
                        <button style="margin-bottom: 6px"
                                class="arrow-right-6x3-icon button-toolbar-a"
                                oncommand="customColor('schemeColorPicker')"/>
<!-- #endif -->
                    </hbox>
                    <hbox align="center">
                        <checkbox id="useSelFore"
                                  label="&overrideTextColorInSelection.label;"
                                  oncommand="clickCheckbox('useSelFore', 'selFore')"/>
                    </hbox>
                    <hbox align="center">
                        <checkbox id="caretLineVisible"
                                  label="&highlightCurrentLine.label;"
                                  oncommand="clickCheckbox('caretLineVisible', 'caretLineBack')"/>
                    </hbox>
                </tabpanel>
                <tabpanel id="common_panel" orient="vertical">
                    <description style="margin-bottom: 10px;">
                        Set styling for syntax elements common to many
                        programming languages.
                    </description>
                    <vbox>
                        <hbox align="center">
                            <label value="Element Type: " accesskey="&T.accesskey;" control="commonlist"/>
                            <menulist id="commonlist"
                                      style="width: 180px"
                                      oncommand="updateCommonStyle();">
                                <menupopup id="commonpopup"/>
                            </menulist>
                            <spacer class="thick"/>
                            <button id="reset-common-defaults"
                                    label="&reset.label;"
                                    oncommand="onResetCommon(event);" />
                        </hbox>

                        <separator class="thin"/>
                            <hbox align="center">
                                <label value="Face:"/>
                                <menulist id="fixedOrPropCommon" oncommand="pickFaceType(this)">
                                    <menupopup>
                                        <menuitem value="1" label="&fixedWidth.label;" style="font-family: monospace"/>
                                        <menuitem value="0" label="&proportional.label;" style="font-family: serif"/>
                                    </menupopup>
                                </menulist>
                                <label value="Size:"/>
                                <menulist id="commonSize" oncommand="onClickCommonSize()">
                                    <menupopup>
                                        <menuitem id="commonSize_8" value="8" label="8"/>
                                        <menuitem id="commonSize_9" value="9" label="9"/>
                                        <menuitem id="commonSize_10" value="10" label="10"/>
                                        <menuitem id="commonSize_11" value="11" label="11"/>
                                        <menuitem id="commonSize_12" value="12" label="12"/>
                                        <menuitem id="commonSize_13" value="13" label="13"/>
                                        <menuitem id="commonSize_14" value="14" label="14"/>
                                        <menuitem id="commonSize_15" value="15" label="15"/>
                                        <menuitem id="commonSize_16" value="16" label="16"/>
                                        <menuitem id="commonSize_18" value="18" label="18"/>
                                        <menuitem id="commonSize_20" value="20" label="20"/>
                                        <menuitem id="commonSize_24" value="24" label="24"/>
                                        <menuitem id="commonSize_26" value="26" label="26"/>
                                        <menuitem id="commonSize_28" value="28" label="28"/>
                                        <menuitem id="commonSize_32" value="32" label="32"/>
                                        <menuitem id="commonSize_36" value="36" label="36"/>
                                        <menuitem id="commonSize_40" value="40" label="40"/>
                                        <menuitem id="commonSize_48" value="48" label="48"/>
                                        <menuitem id="commonSize_56" value="56" label="56"/>
                                        <menuitem id="commonSize_64" value="64" label="64"/>
                                        <menuitem id="commonSize_72" value="72" label="72"/>
                                    </menupopup>
                                </menulist>
                                <button id="commonBold"
                                    class="boldtext-icon button-toolbar-d"
                                    type="checkbox"
                                    oncommand="onClickBoldOrItalic(this)" />
                                <button id="commonItalic"
                                    class="italictext-icon button-toolbar-d"
                                    type="checkbox"
                                    oncommand="onClickBoldOrItalic(this)" />
                            </hbox>
                            <separator class="thin"/>
                            <hbox align="center">
                                <label value="Foreground:"/>
                                <colorpicker id="commonColorPickerFore"
                                             palettename="scin-customize"
                                             type="button" width="20" height="20"
                                             persist="palettename"
                                             onchange="setColour(this)"/>
<!-- #if PLATFORM == "win" or PLATFORM == "darwin" -->
                                <button style="margin-bottom: 6px"
                                        class="arrow-right-6x3-icon button-toolbar-a"
                                        oncommand="customColor('commonColorPickerFore')"/>
<!-- #endif -->
                                <label value="Background:"/>
                                <colorpicker id="commonColorPickerBack"
                                             palettename="scin-customize"
                                             type="button" width="20" height="20"
                                             persist="palettename"
                                             onchange="setColour(this)"/>
<!-- #if PLATFORM == "win" or PLATFORM == "darwin" -->
                                <button style="margin-bottom: 6px"
                                        class="arrow-right-6x3-icon button-toolbar-a"
                                        oncommand="customColor('commonColorPickerBack')"/>
<!-- #endif -->
                            </hbox>
                    </vbox>
                </tabpanel>
                <tabpanel id="specific_panel" orient="vertical">
                    <description style="margin-bottom: 10px;">
                        Set styling for language-specific syntax elements.
                    </description>
                    <hbox align="center">
                        <label value="Language:" class="kopadded" accesskey="&G.accesskey;" control="languageList"/>
                        <langlist id="languageList" oncommand="changeLanguage()"/>
                    </hbox>
                    <separator class="thin"/>
                    <hbox>
                        <vbox flex="1">
                            <hbox align="center">
                                <label value="Element Type: " accesskey="&Y.accesskey;" control="specificlist"/>
