    <hbox id="scintillaOverlayXul"/>

    <vbox  style="padding: 6px;">
        <hbox>
            <vbox pack="end">
                <label value="Sample Text:"/>
            </vbox>
            <!--<spacer flex="1"/>-->
            <!--<menulist id="samplelanguagelist">-->
            <!--    <menupopup>-->
            <!--        <menuitem label="HTML Sample"/>-->
