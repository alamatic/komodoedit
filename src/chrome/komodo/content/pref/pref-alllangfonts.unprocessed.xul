                                    <menupopup id="specificpopup"/>
                                </menulist>
                                <spacer class="thick"/>
                                <button id="reset-specific-defaults"
                                        label="&reset.label;"
                                        oncommand="onResetSpecific(event);" />
                            </hbox>
                            <separator class="thin"/>
                            <hbox align="center">
                                <label value="Face:"/>
                                <menulist id="fixedOrPropSpecific" oncommand="pickFaceType(this)">
                                    <menupopup>
                                        <menuitem value="1" label="&fixedWidth.label;" style="font-family: monospace"/>
