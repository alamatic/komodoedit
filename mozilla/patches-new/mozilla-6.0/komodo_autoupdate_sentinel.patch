+int
+SentinelFile::MyUtime(const char *filename, struct utimbuf *buffer)
+{
+  HANDLE handle;
+  int retval = -1;
+
+#ifdef UNICODE
+  NS_tchar wfilename[MAXPATHLEN];
+  NS_tsnprintf(wfilename, MAXPATHLEN, NS_T("%s"), filename);
+  handle = CreateFileW(wfilename, FILE_WRITE_ATTRIBUTES,
+                       FILE_SHARE_WRITE | FILE_SHARE_READ,
+                       NULL, OPEN_EXISTING, FILE_ATTRIBUTE_NORMAL, NULL);
+#else
+  handle = CreateFile(filename, FILE_WRITE_ATTRIBUTES,
+                      FILE_SHARE_WRITE | FILE_SHARE_READ,
+                      NULL, OPEN_EXISTING, FILE_ATTRIBUTE_NORMAL, NULL);
+#endif
+  if (handle != INVALID_HANDLE_VALUE) {
+    FILETIME ft;
+    UnixTimeToFileTime(buffer->modtime, &ft);
+    retval = SetFileTime(handle, NULL, NULL, &ft) ? 0 : -1;
+    CloseHandle(handle);
+  }
+  return retval;
+}
+#endif
