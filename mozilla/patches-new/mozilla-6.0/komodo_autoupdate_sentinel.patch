+int
+SentinelFile::MyStat(const char *filename, struct stat *statbuf)
+{
+#ifdef XP_WIN
+    HANDLE handle;
+    int retval = -1;
+
+#ifdef UNICODE
+    NS_tchar wfilename[MAXPATHLEN];
+    NS_tsnprintf(wfilename, MAXPATHLEN, NS_T("%s"), filename);
+    handle = CreateFileW(wfilename, FILE_WRITE_ATTRIBUTES,
+                         FILE_SHARE_WRITE | FILE_SHARE_READ,
+                         NULL, OPEN_EXISTING, FILE_ATTRIBUTE_NORMAL, NULL);
+#else
+    handle = CreateFile(filename, FILE_READ_ATTRIBUTES,
+                        FILE_SHARE_WRITE | FILE_SHARE_READ,
+                        NULL, OPEN_EXISTING, FILE_ATTRIBUTE_NORMAL, NULL);
+#endif
+
+    if (handle != INVALID_HANDLE_VALUE) {
+        BY_HANDLE_FILE_INFORMATION bhfi;
+        if (GetFileInformationByHandle(handle, &bhfi)) {
+            FileTimeToUnixTime(&bhfi.ftLastWriteTime, &statbuf->st_mtime);
+            retval = 0;
+        }
+        CloseHandle(handle);
+    }
+    return retval;
+#else
+    return stat(filename, statbuf);
+#endif
+}
